pragma solidity ^0.8.13;

import {BaseScript} from "./BaseScript.s.sol";
import {ERC1967FactoryConstants} from "solady/utils/ERC1967FactoryConstants.sol";
import {ERC1967Factory} from "solady/utils/ERC1967Factory.sol";

contract DeployERC1967ProxyFactory is BaseScript {
    bytes constant KEYLESS_CREATE2_TX_DATA =
        hex"f87e8085174876e800830186a08080ad601f80600e600039806000f350fe60003681823780368234f58015156014578182fd5b80825250506014600cf31ba02222222222222222222222222222222222222222222222222222222222222222a02222222222222222222222222222222222222222222222222222222222222222";
    bytes constant INEFFECIENT_CREATE2_BYTECODE =
        hex"";
    bytes constant IMMUTABLE_CREATE2_BYTECODE =
        hex"";
    bytes constant ERC1967_IMMUTABLE_PROXY_FACTORY_BYTECODE =
        ERC1967FactoryConstants.INITCODE;

    ERC1967Factory proxyFactory =
        ERC1967Factory(ERC1967FactoryConstants.ADDRESS);

    function run() external broadcaster {
        deploy();
        assertions();
    }

    function deploy() public {
        if (address(proxyFactory).code.length != 0) {
            return;
        }

        if (block.chainid != 31337) {
            return;
        }

        (bool success,) = 0x4c8D290a1B368ac4728d83a9e8321fC3af2b39b1.call{
            value: 1.1 ether
        }("");
        require(success);

        (success,) = address(0x7A0D94F55792C434d74a40883C6ed8545E406D12).call(
            KEYLESS_CREATE2_TX_DATA
        );
        require(success, "Failed to deploy keyless CREATE2");

        (success,) = address(0x7A0D94F55792C434d74a40883C6ed8545E406D12).call{
            value: 0
        }(INEFFECIENT_CREATE2_BYTECODE);
        require(success, "Failed to deploy inefficient CREATE2 factory");

        (success,) = address(0xcfA3A7637547094fF06246817a35B8333C315196).call{
            value: 0
        }(IMMUTABLE_CREATE2_BYTECODE);
        require(success, "Failed to deploy immutable CREATE2 factory");

        (success,) = address(0x0000000000FFe8B47B3e2130213B802212439497).call(
            abi.encodeWithSignature(
                "safeCreate2(bytes32,bytes)",
                ERC1967FactoryConstants.SALT,
                ERC1967_IMMUTABLE_PROXY_FACTORY_BYTECODE
            )
        );
        require(success, "Failed to deploy ERC1967 immutable proxy factory");
    }

    function assertions() private view {}
}
