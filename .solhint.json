{
  "extends": "solhint:recommended",
  "rules": {
    "gas-increment-by-one": "error",
    "no-unused-import": "error",
    "compiler-version": "off",
    "gas-calldata-parameters": "error",
    "import-path-check": "off",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "use-natspec": [
      "error",
      {
        "title": {
          "enabled": true,
          "ignore": {}
        },
        "author": {
          "enabled": false,
          "ignore": {}
        },
        "notice": {
          "enabled": false,
          "ignore": {}
        },
        "param": {
          "enabled": false,
          "ignore": {}
        },
        "return": {
          "enabled": false,
          "ignore": {}
        }
      }
    ]
  }
}
